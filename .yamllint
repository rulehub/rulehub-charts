extends: default
rules:
  line-length:
    max: 140
    level: warning
  truthy:
    allowed-values: ["true", "false", "on", "off", "yes", "no"]
    check-keys: false
  document-start: disable
  indentation:
    indent-sequences: consistent

# Ignore Helm templates (contain Go templating, not plain YAML)
ignore: |
  templates/**/*.yaml
