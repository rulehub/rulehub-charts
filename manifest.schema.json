{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "rulehub-policies manifest",
    "type": "array",
    "items": {
        "type": "object",
        "required": [
            "file",
            "sha256",
            "rulehub.id"
        ],
        "properties": {
            "file": {
                "type": "string",
                "description": "Policy file name (basename for kyverno, or path segment e.g. gatekeeper/<file>)"
            },
            "sha256": {
                "type": "string",
                "pattern": "^[a-f0-9]{64}$"
            },
            "rulehub.id": {
                "type": "string"
            },
            "kind": {
                "type": "string",
                "description": "Kubernetes resource kind (ClusterPolicy, ConstraintTemplate, Constraint, etc.)"
            },
            "framework": {
                "type": "string",
                "enum": [
                    "kyverno",
                    "gatekeeper",
                    "gatekeeper-template"
                ]
            },
            "validationFailureAction": {
                "type": "string",
                "enum": [
                    "audit",
                    "enforce",
                    "dryrun"
                ],
                "description": "Effective Kyverno validationFailureAction if applicable"
            },
            "size": {
                "type": "integer",
                "minimum": 1
            },
            "generatedAt": {
                "type": "string",
                "format": "date-time"
            }
        },
        "additionalProperties": false
    }
}
